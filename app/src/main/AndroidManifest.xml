<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ktvr.ktvr_team45">

    <uses-feature android:name="android.hardware.camera2" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BusCodeActivity" />
        <activity android:name=".GrievanceActivity" />
        <activity android:name=".ShiftInProgressActivity" />
        <activity android:name=".ScanActivity" />
        <activity
            android:name=".Grievances"
            android:label="@string/title_activity_grievances"
            android:theme="@style/AppTheme" />
        <activity android:name=".Splashscreen" />
        <activity
            android:name=".DriverProfile"
            android:label="@string/title_activity_driver_profile"
            android:theme="@style/AppTheme" />
        <activity android:name=".MessageAdmin"></activity>
    </application>

</manifest>